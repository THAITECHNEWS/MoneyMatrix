# Simple Dockerfile for Railway deployment
# railway_server.py only uses Python standard library, no external dependencies needed
FROM python:3.11-slim

WORKDIR /app

# Copy only necessary files (dist/ and server)
COPY railway_server.py .
COPY dist/ ./dist/

# Expose port (Railway sets PORT env var)
EXPOSE 8000

# Start server
CMD ["python", "railway_server.py"]

